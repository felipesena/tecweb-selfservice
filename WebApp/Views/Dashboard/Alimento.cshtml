<div class="container">
    <h2>Adicionar Alimento</h2>

    <form method="post" action="/addAlimento">
        <div class="form-group">
            @Html.AntiForgeryToken()
            <label for="descricao">Descrição</label>
            <input type="text" required class="form-control" name="descricao" id="descricao" placeholder="Descrição">
        </div>
        <div class="form-group">
            <label for="quantidadeBase">Quantidade Base</label>
            <input type="text" required class="form-control" name="quantidadeBase" id="quantidadeBase" placeholder="Quantidade Base">
        </div>
        <div class="form-group">
            <label for="quantidadeBase">Calorias</label>
            <input type="text" required class="form-control" name="calorias" id="calorias" placeholder="Calorias">
        </div>
        <div class="form-group">
            <label for="fibras">Fibras</label>
            <input type="text" required class="form-control" name="fibras" id="fibras" placeholder="Fibras">
        </div>
        <div class="form-group">
            <label for="ferro">Ferro</label>
            <input type="text" required class="form-control" name="ferro" id="ferro" placeholder="Ferro">
        </div>
        <div class="form-group">
            <label for="potassio">Potássio</label>
            <input type="text" required class="form-control" name="potassio" id="potassio" placeholder="Potássio">
        </div>
        <div class="form-group">
            <label for="zinco">Zinco</label>
            <input type="text" required class="form-control" name="zinco" id="zinco" placeholder="Zinco">
        </div>
        <div class="form-group">
            <label for="carboidratos">Carboidratos</label>
            <input type="text" required class="form-control" name="carboidratos" id="carboidratos" placeholder="Carboidratos">
        </div>
        <div class="form-group">
            <label for="fosforo">Fósforo</label>
            <input type="text" required class="form-control" name="fosforo" id="fosforo" placeholder="Fósforo">
        </div>
        <div class="form-group">
            <label for="sodio">Sódio</label>
            <input type="text" required class="form-control" name="sodio" id="sodio" placeholder="Sódio">
        </div>
        <div class="form-group">
            <label for="proteinas">Proteínas</label>
            <input type="text" required class="form-control" name="proteinas" id="proteinas" placeholder="Proteínas">
        </div>
        <div class="form-group">
            <label for="lipidios">Lipídios</label>
            <input type="text" required class="form-control" name="lipidios" id="lipidios" placeholder="Lipídios">
        </div>

        <button type="submit" class="btn btn-secondary">Adicionar</button>
    </form>



</div>


